# touch c && 2041 tigger-add c && 2041 tigger-commit -m asdf

# 2041 tigger-checkout master
# 2041 tigger-branch b3 && 2041 tigger-checkout b3

# touch d && 2041 tigger-add d && 2041 tigger-commit -m asdf