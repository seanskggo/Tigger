# touch a && 2041 tigger-add a && 2041 tigger-commit -m asdf

# 2041 tigger-checkout master
# 2041 tigger-branch b1 && 2041 tigger-checkout b1

# touch b && 2041 tigger-add b && 2041 tigger-commit -m asdf

# 2041 tigger-checkout master
